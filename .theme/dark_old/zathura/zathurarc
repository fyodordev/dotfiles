# Good reference: https://gist.github.com/michaelmrose/9595075b43f24aa903fa

set default-bg "#1C252E"

# set recolor "true"
set recolor-lightcolor "#0d1926"
set recolor-darkcolor "#F9F5ED"

map <C-i> recolor
set guioptions ""

set selection-clipboard clipboard

# This fixes links not being open in a browser.
set sandbox none
