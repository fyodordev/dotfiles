# vim: filetype=neomuttrc
# Import account specific settings
source /usr/share/mutt-wizard/mutt-wizard-template.muttrc # mw-autogenerated

# Set starting account
source /home/fyodor/.config/mutt/accounts/1-sampleacc.muttrc # mw-autogenerated

# Set keybind to switch to account
macro index,pager i1 '<sync-mailbox><enter-command>source /home/fyodor/.config/mutt/accounts/1-sampleacc.muttrc<enter><change-folder>!<enter>;<check-stats>' "switch to user@sampleacc.com" # mw-autogenerated

